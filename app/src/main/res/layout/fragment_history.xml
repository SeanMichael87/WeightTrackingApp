<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryFrag">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="409dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TableRow android:layout_height="86dp">

                <EditText
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="10sp"
                    android:autofillHints="Select Date"
                    android:hint="Select Date"
                    android:textSize="20sp"
                    android:inputType="date"
                    android:paddingTop="20sp"
                    android:paddingEnd="40sp" />

                <EditText
                    android:layout_width="141dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:autofillHints="Enter Weight"
                    android:hint="Enter Weight"
                    android:textSize="20sp"
                    android:inputType="number"
                    android:paddingTop="20sp" />

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="8sp"
                    android:layout_marginBottom="8sp"
                    android:background="@drawable/daily_weight_box"
                    android:clickable="true"
                    android:contentDescription="add button"
                    android:src="@drawable/baseline_add_24" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/table_lines">

                <TextView
                    android:id="@+id/date_text_example"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Date"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/weight_text_example"
                    android:layout_width="116dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@null"
                    android:gravity="center"
                    android:text="Weight"
                    android:textSize="30sp" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/blue"
            android:text="Weight History"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="413dp"
            android:layout_height="685dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:contentDescription="Weight History"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="delete data"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="0.956"
            app:srcCompat="@drawable/baseline_delete_forever_24"
            app:maxImageSize="56dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>